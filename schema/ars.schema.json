{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDISC ARS (Analysis Results Standard) - Minimal Demo Schema",
  "type": "object",
  "required": ["analyses", "version"],
  "properties": {
    "version": { "type": "string" },
    "analyses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["analysis_id", "population", "dataset", "variable", "group_by", "statistics"],
        "properties": {
          "analysis_id": { "type": "string" },
          "dataset": { "type": "string" },
          "population": {
            "type": "object",
            "required": ["filter"],
            "properties": { "filter": { "type": "string" } }
          },
          "variable": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "label": { "type": "string" }
            }
          },
          "group_by": { "type": "array", "items": { "type": "string" } },
          "statistics": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": ["N", "MEAN", "SD", "MEDIAN", "Q1", "Q3", "MIN", "MAX", "SE", "CV"]
            }
          },
          "presentation": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "footnotes": { "type": "array", "items": { "type": "string" } },
              "rounding": {
                "type": "object",
                "properties": {
                  "integers": { "type": "integer", "minimum": 0 },
                  "decimals": { "type": "integer", "minimum": 0 }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
